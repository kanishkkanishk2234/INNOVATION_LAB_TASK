#java script 
console.log("=== Task 2: Loop Control Practice ===");

let i = 1;
console.log("Numbers from 1 to 10 using while loop:");
while (i <= 10) {
  console.log(i);
  i++;
}

let input;
do {
  input = prompt("Enter a number greater than 5:");
} while (input <= 5);
console.log("Correct input received:", input);

let N = 5;
console.log(`First ${N} natural numbers using for loop:`);
for (let j = 1; j <= N; j++) {
  console.log(j);
}

let number = 3;
console.log(`Multiplication Table for ${number}:`);
for (let i = 1; i <= 10; i++) {
  console.log(`${number} x ${i} = ${number * i}`);
}
