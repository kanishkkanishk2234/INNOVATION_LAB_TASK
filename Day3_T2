<html>
<head>
  <title>Task 2: Function Expressions & Arrow Functions</title>
</head>
<body>
  <h2>Task 2: Function Expressions & Arrow Functions</h2>

  <h4>Function Expression:</h4>
  <button onclick="sayHi()">Call Function Expression</button>

  <h4>Arrow Function:</h4>
  <button onclick="arrowGreet()">Call Arrow Function</button>

  <h4>Arrow Function - Sum:</h4>
  <button onclick="sumArrow(4, 6)">Call sumArrow(4, 6)</button>

  <p> (Right-click > Inspect > Console)</p>

  <script>
    
    const sayHi = function () {
      console.log("Hi! This is a function expression.");
    };

   
    const arrowGreet = () => {
      console.log("Hello from an arrow function!");
    };

    
    const sumArrow = (a, b) => {
      const sum = a + b;
      console.log(`Sum using arrow function: ${sum}`);
      return sum;
    };
  </script>
</body>
</html>
