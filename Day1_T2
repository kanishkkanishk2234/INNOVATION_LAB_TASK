#javaScript
console.log("=== Task 2: Data Types & Type Conversion ===");

let num = 100;
let str = "150";
let bool = true;
let nullVal = null;
let undef;
let obj = { name: "kanishk", age: 20 };

console.log("Number:", num);
console.log("String:", str);
console.log("Boolean:", bool);
console.log("Null:", nullVal);
console.log("Undefined:", undef);
console.log("Object:", obj);

let nToStr = String(num);
let sToNum = Number(str);
let auto = "10" * 2;

console.log("Number to String:", nToStr);
console.log("String to Number:", sToNum);
console.log("Implicit Conversion (\"10\" * 2):", auto);
